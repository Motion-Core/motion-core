{
	"name": "motion-core-monorepo",
	"packageManager": "bun@1.3.3",
	"private": true,
	"scripts": {
		"nx": "nx",
		"build": "nx run docs:build",
		"build:docs": "nx run docs:build",
		"dev": "nx run docs:dev",
		"check": "nx run docs:check",
		"docs:manifest": "nx run docs:registry",
		"docs:dev": "nx run docs:dev",
		"docs:build": "nx run docs:build",
		"docs:preview": "nx run docs:preview",
		"docs:check": "nx run docs:check",
		"registry:build": "nx run docs:registry",
		"workspace:bootstrap": "nx run docs:registry && nx run motion-core-cli:check",
		"cli:check": "nx run motion-core-cli:check",
		"cli:test": "nx run motion-core-cli:test",
		"cli:build": "nx run motion-core-cli:build",
		"cli:build:release": "nx run motion-core-cli:build-release",
		"cli:dist": "nx run motion-core-cli:dist",
		"lint": "eslint .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "husky"
	},
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"devDependencies": {
		"@eslint/js": "^9.19.0",
		"@nxrs/cargo": "^0.6.2",
		"@types/node": "^25.0.3",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^3.1.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"nx": "^22.3.3",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.5",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte-eslint-parser": "^1.4.1",
		"typescript-eslint": "^8.19.1",
		"svelte-check": "^4.3.5"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix",
			"prettier --write"
		],
		"packages/motion-core/src/lib/components/**/component.json": [
			"bun scripts/validate-registry.ts"
		],
		"packages/motion-core/src/lib/components/**/*.{svelte,ts,js}": [
			"bun scripts/validate-registry.ts"
		]
	}
}
