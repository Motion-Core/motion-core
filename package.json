{
	"name": "motion-core-monorepo",
	"packageManager": "bun@1.3.3",
	"private": true,
	"scripts": {
		"build": "bun run docs:build",
		"build:docs": "bun run docs:build",
		"dev": "bun run docs:dev",
		"check": "bun run docs:check",
		"docs:manifest": "bun run --cwd=apps/docs build:registry",
		"docs:dev": "bun run --cwd=apps/docs dev",
		"docs:build": "bun run --cwd=apps/docs build",
		"docs:preview": "bun run --cwd=apps/docs preview",
		"docs:check": "bun run --cwd=apps/docs check",
		"registry:build": "bun run docs:manifest",
		"workspace:bootstrap": "bun run registry:build && bun run cli:check",
		"cli:check": "cargo check --manifest-path motion-core-cli/Cargo.toml --package motion-core-cli",
		"cli:test": "cargo test --manifest-path motion-core-cli/Cargo.toml --package motion-core-cli",
		"cli:build": "cargo build --manifest-path motion-core-cli/Cargo.toml --package motion-core-cli",
		"cli:build:release": "cargo build --manifest-path motion-core-cli/Cargo.toml --package motion-core-cli --release",
		"cli:dist": "bash scripts/build-and-link.sh",
		"lint": "eslint .",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"devDependencies": {
		"@eslint/js": "^9.19.0",
		"@types/node": "^25.0.3",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^3.1.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.5",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte-eslint-parser": "^1.4.1",
		"typescript-eslint": "^8.19.1"
	}
}
