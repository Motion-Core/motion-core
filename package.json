{
	"name": "motion-core-monorepo",
	"packageManager": "bun@1.3.3",
	"private": true,
	"scripts": {
		"build": "bun run build:package && bun run build:docs",
		"build:docs": "bun run --cwd=apps/docs build",
		"dev": "bun run --cwd=apps/docs dev",
		"check": "bun run --cwd=apps/docs check",
		"lint": "eslint .",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"devDependencies": {
		"@eslint/js": "^9.19.0",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^3.1.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.5",
		"svelte-eslint-parser": "^1.4.1",
		"typescript-eslint": "^8.19.1"
	}
}
