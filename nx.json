{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"npmScope": "motion-core",
	"workspaceLayout": {
		"appsDir": "apps",
		"libsDir": "packages"
	},
	"defaultBase": "main",
	"tasksRunnerOptions": {
		"default": {
			"runner": "nx/tasks-runners/default",
			"options": {
				"cacheableOperations": ["build", "check", "lint", "test"]
			}
		}
	},
	"namedInputs": {
		"default": [
			"{projectRoot}/**/*",
			"!{projectRoot}/dist/**",
			"!{projectRoot}/build/**"
		],
		"production": [
			"default",
			"!{projectRoot}/**/*.spec.*",
			"!{projectRoot}/**/*.test.*"
		]
	},
	"targetDefaults": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["production", "^production"],
			"cache": true
		},
		"check": {
			"inputs": ["default", "^default"],
			"cache": true
		},
		"lint": {
			"inputs": ["default", "^default"],
			"cache": true
		},
		"test": {
			"dependsOn": ["^test"],
			"inputs": ["default", "^default"],
			"cache": true
		}
	},
	"plugins": ["@nxrs/cargo"],
	"defaultProject": "docs"
}
